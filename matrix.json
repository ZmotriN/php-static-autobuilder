{
    "version": "0.1.0",

    "master": {
        "repo": "https://github.com/ZmotriN/php-static-autobuilder.git"
    },

    "embeder": {
        "repo": "https://github.com/ZmotriN/php-embed-static.git"
    },

    "sdk": {
        "download_url": "https://github.com/php/php-sdk-binary-tools/archive/refs/heads/master.zip"
    },

    "rcedit": {
        "download_url": "https://github.com/electron/rcedit/releases/download/v2.0.0/rcedit-x64.exe"
    },

    "php": {
        "version": "8.3.7",
        "download_url": "https://windows.php.net/downloads/releases/php-8.3.7-src.zip",
        "archive_url": "https://windows.php.net/downloads/releases/archives/php-8.3.7-Win32-vs16-x64.zip"
    },

    "extensions": [
        {
            "name": "win32std",
            "repo": "https://github.com/ZmotriN/win32std.git",
            "builtin": false,
            "mandatory": true,
            "switch": "--with-win32std",
            "dependancies": [],
            "libraries": []
        },
        {
            "name": "winbinder",
            "repo": "https://github.com/ZmotriN/Winbinder-PHP8.git",
            "builtin": false,
            "mandatory": false,
            "switch": "--with-winbinder",
            "dependancies": [],
            "libraries": []
        },
        {
            "name": "wcli",
            "repo": "https://github.com/ZmotriN/php-wcli.git",
            "builtin": false,
            "mandatory": false,
            "switch": "--with-wcli",
            "dependancies": [],
            "libraries": []
        },
        {
            "name": "curl",
            "repo": "",
            "builtin": true,
            "mandatory": false,
            "switch": "--with-curl",
            "dependancies": [],
            "libraries": ["curl"]
        },
        {
            "name": "openssl",
            "repo": "",
            "builtin": true,
            "mandatory": false,
            "switch": "--with-openssl=static",
            "dependancies": [],
            "libraries": ["openssl"]
        },
        {
            "name": "bz2",
            "repo": "",
            "builtin": true,
            "mandatory": false,
            "switch": "--with-bz2",
            "dependancies": [],
            "libraries": ["libbzip2"]
        },
        {
            "name": "phar",
            "repo": "",
            "builtin": true,
            "mandatory": false,
            "switch": "--enable-phar",
            "dependancies": ["bz2"],
            "libraries": []
        },
        {
            "name": "igbinary",
            "repo": "",
            "url": "https://pecl.php.net/get/igbinary-3.2.15.tgz",
            "version": "3.2.15",
            "builtin": false,
            "mandatory": false,
            "switch": "--enable-igbinary",
            "dependancies": [],
            "libraries": []
        },
        {
            "name": "timezonedb",
            "repo": "",
            "url": "https://pecl.php.net/get/timezonedb-2024.1.tgz",
            "version": "2024.1",
            "builtin": false,
            "mandatory": false,
            "switch": "--enable-timezonedb",
            "dependancies": [],
            "libraries": []
        },
        {
            "name": "zlib",
            "repo": "",
            "builtin": true,
            "mandatory": false,
            "switch": "--enable-zlib",
            "dependancies": [],
            "libraries": ["zlib"]
        },
        {
            "name": "zip",
            "repo": "",
            "builtin": true,
            "mandatory": false,
            "switch": "--enable-zip",
            "dependancies": [],
            "libraries": ["libzip", "liblzma"]
        }
    ],
    
    "libraries": [
        {
            "name": "zlib",
            "version": "1.2.12",
            "download_url": "https://downloads.php.net/~windows/php-sdk/deps/vs16/x64/zlib-1.2.12-vs16-x64.zip",
            "install_script": "install_library.php",
            "install_check": "lib\\zlib_a.lib",
            "mandatory": true,
            "dependancies": []
        },
        {
            "name": "libzip",
            "version": "1.7.1-1",
            "download_url": "https://downloads.php.net/~windows/php-sdk/deps/vs16/x64/libzip-1.7.1-1-vs16-x64.zip",
            "install_script": "install_library.php",
            "install_check": "lib\\libzip_a.lib",
            "mandatory": false,
            "dependancies": []
        },
        {
            "name": "liblzma",
            "version": "5.2.5",
            "download_url": "https://downloads.php.net/~windows/php-sdk/deps/vs16/x64/liblzma-5.2.5-vs16-x64.zip",
            "install_script": "install_library.php",
            "install_check": "lib\\liblzma_a.lib",
            "mandatory": false,
            "dependancies": []
        },
        {
            "name": "libbzip2",
            "version": "1.0.8",
            "download_url": "https://downloads.php.net/~windows/php-sdk/deps/vs16/x64/libbzip2-1.0.8-vs16-x64.zip",
            "install_script": "install_library.php",
            "install_check": "lib\\libbz2_a.lib",
            "mandatory": false,
            "dependancies": []
        },
        {
            "name": "openssl",
            "version": "3.0.13",
            "download_url": "https://www.openssl.org/source/openssl-3.0.13.tar.gz",
            "install_script": "install_openssl.php",
            "mandatory": false,
            "dependancies": []
        },
        {
            "name": "nghttp2",
            "version": "1.51.0",
            "download_url": "https://github.com/winlibs/nghttp2/archive/refs/tags/nghttp2-1.51.0.zip",
            "install_script": "install_nghttp2.php",
            "mandatory": false,
            "dependancies": []
        },
        {
            "name": "libssh2",
            "version": "1.10.0",
            "download_url": "https://github.com/winlibs/libssh2/archive/refs/tags/libssh2-1.10.0.zip",
            "install_script": "install_libssh2.php",
            "mandatory": false,
            "dependancies": ["openssl"]
        },
        {
            "name": "curl",
            "version": "8.7.1",
            "download_url": "https://curl.se/download/curl-8.7.1.zip",
            "install_script": "install_curl.php",
            "mandatory": false,
            "dependancies": ["openssl", "libssh2", "nghttp2", "zlib"]
        }
    ]
}